function CheckLength(ControlName,Limit,Operator, Msg)
{

	var ControlObject=eval(ControlName)
	ControlObject.value=trim(ControlObject.value)

	switch (Operator)
	{
		case "=":
			if(ControlObject.value.length == Limit)
			{
				if (Msg != "") 
				{
					alert(Msg)
					ControlObject.select()
					ControlObject.focus()
				}
				return true
			}
			return false
			break

		case ">":
			if(ControlObject.value.length > Limit)
			{
				if (Msg != "") 
				{
					alert(Msg)
					ControlObject.select()
					ControlObject.focus()
				}
				return true
			}
			return false
			break
			
	}
}

